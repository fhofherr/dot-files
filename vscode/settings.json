{
  "editor.fontFamily": "Fira Code",
  "editor.rulers": [
    80
  ],
  "editor.fontLigatures": true,
  "editor.formatOnPaste": true,
  "editor.showFoldingControls": "always",
  "editor.parameterHints.enabled": false,
  "editor.suggest.showTypeParameters": false,
  "editor.tabCompletion": "onlySnippets",
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.renderWhitespace": "all",
  "editor.suggestSelection": "first",
  "explorer.autoReveal": false,
  "explorer.openEditors.visible": 0,
  "workbench.colorTheme": "Atom One Light",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "left",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "window.zoomLevel": 1,
  // Ensure the menubar is black if we select a black theme.
  // See: https://stackoverflow.com/a/52331466
  "window.titleBarStyle": "custom",
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.allowCompoundWords": true,
  "go.autocompleteUnimportedPackages": true,
  "go.useLanguageServer": true,
  "go.formatTool": "goimports",
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "package",
  "go.lintFlags": [
    "--fast"
  ],
  "go.vetOnSave": "package",
  "go.inferGopath": true,
  "go.toolsGopath": "~/.local/Code/go-tools",
  "go.addTags": {
    "promptForTags": true,
    "transform": "camelcase"
  },
  "[go]": {
    "editor.snippetSuggestions": "bottom",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.rulers": [
      80,120
    ]
  },
  "gopls": {
    "usePlaceholders": false, // add parameter placeholders when completing a function
    // Experimental settings
    "completeUnimported": true, // autocomplete unimported packages
    "deepCompletion": true, // enable deep completion
  },
  "python.jediEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "yapf",
  "[python]": {
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 72,
    "editor.quickSuggestions": false,
    "editor.rulers": [
      72
    ]
  },
  "shellcheck.disableVersionCheck": true,
  "todo-tree.highlights.enabled": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "platformio-ide.activateOnlyOnPlatformIOProject": true,

  // Use system clang-format, as the one shipped with vscode does not work
  // on fedora.
  //
  // Install with
  //
  //     dnf install clang
  //
  // See https://github.com/microsoft/vscode-cpptools/issues/3174#issuecomment-463944461
  "C_Cpp.clang_format_path": "/usr/bin/clang-format"
}
